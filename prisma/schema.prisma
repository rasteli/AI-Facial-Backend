// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  gender      String
  email       String    @unique
  phone       String    @unique
  nickname    String    @unique
  password    String
  birth_date  DateTime

  @@map("users")
}